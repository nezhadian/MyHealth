<UserControl x:Class="MyHealth.TimeSpanControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyHealth"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <Grid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBox x:Name="txtHour" Width="18" TabIndex="0" TextChanged="txtHour_TextChanged"  MaxLength="2"/>
            <TextBlock Text=":" Padding="5,0" />
            <TextBox x:Name="txtMin" Width="18" TabIndex="1" TextChanged="txtHour_TextChanged"  MaxLength="2"/>
            <TextBlock Text=":" Padding="5,0" />
            <TextBox x:Name="txtSecond" Width="18" TabIndex="2" TextChanged="txtHour_TextChanged"  MaxLength="2"/>
        </StackPanel>
    </Grid>
</UserControl>
