<Application
    x:Class="MyHealth.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:adonis="clr-namespace:AdonisUI;assembly=AdonisUI"
    xmlns:local="clr-namespace:MyHealth"
    StartupUri="MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>

                <ResourceDictionary Source="pack://application:,,,/AdonisUI;component/ColorSchemes/Light.xaml" />
                <ResourceDictionary Source="pack://application:,,,/AdonisUI.ClassicTheme;component/Resources.xaml" />

                <ResourceDictionary Source="/Converters/Converters.xaml" />

                <ResourceDictionary Source="/Styles/Dimensions.xaml" />
                <ResourceDictionary Source="/Styles/ColorSchemes/Adonis.xaml" />
                <ResourceDictionary Source="/Styles/IconsData.xaml" />
                <ResourceDictionary Source="/Styles/Styles.xaml" />

                <ResourceDictionary Source="/Views/Views.xaml" />

            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
