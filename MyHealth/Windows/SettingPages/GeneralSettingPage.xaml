<Page x:Class="MyHealth.GeneralSettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyHealth"
      mc:Ignorable="d" 
      Loaded="Page_Loaded"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="GlobalSettingPage">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <CheckBox VerticalAlignment="Center" x:Name="chkStartAtStartup" Click="OnAnyChanged">Start at startup</CheckBox>
        <local:ColorSelector x:Name="clrFreshStartBG" Grid.Row="1" Text="Fresh Start Background Color" ColorChanged="OnAnyChanged"/>
        <local:ColorSelector x:Name="clrShortBreakBG" Grid.Row="2" Text="Short Break Background Color" ColorChanged="OnAnyChanged"/>

    </Grid>
</Page>
