<Page x:Class="MyHealth.StepEditorPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyHealth"
        mc:Ignorable="d"
        Loaded="main_Loaded"
        Title="Steps Editor" d:Height="400" d:Width="600">

    <Page.CommandBindings>
        <CommandBinding Command="{x:Static local:StepEditorPage.ArrowUp}" CanExecute="ArrowUp_CanExecute" Executed="ArrowCommands_Execute"/>
        <CommandBinding Command="{x:Static local:StepEditorPage.ArrowDown}" CanExecute="ArrowDown_CanExecute" Executed="ArrowCommands_Execute"/>

        <CommandBinding Command="{x:Static ApplicationCommands.New}" CanExecute="New_CanExecute" Executed="New_Executed"/>
        <CommandBinding Command="{x:Static ApplicationCommands.Delete}" CanExecute="Delete_CanExecute" Executed="Delete_Executed"/>
    </Page.CommandBindings>

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="250"/>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="cboTemplates" SelectionChanged="cboTemplates_SelectionChanged">
            <ComboBoxItem Content="Pomoduro" Tag="pomo"/>
            <ComboBoxItem Content="52/17 Standard" Tag="standard"/>
            <ComboBoxItem Content="Custom" Tag="" IsSelected="True"/>
        </ComboBox>
        <ListBox Grid.Row="2" x:Name="lstItems" SelectionChanged="lstItems_SelectionChanged">
            <local:StepData StepType="WorkTime" Duration="00:52:00" StepName="52min Work"/>
            <local:StepData StepType="ImageSlider" Duration="00:17:00" StepName="Resting" ImageList="Body"/>
            <local:StepData StepType="FreshStart" StepName="Ready"/>
            <local:StepData StepType="Seperator" StepName="Ready"/>
        </ListBox>

        <Grid Grid.Row="0" Grid.RowSpan="3" Grid.Column="2">
            <StackPanel x:Name="stckMain" Visibility="Collapsed">
                <StackPanel >
                    <Label >Step Type</Label>
                    <ComboBox x:Name="cboStepType" SelectionChanged="cboStepType_SelectionChanged">
                        <ComboBoxItem Content="Work Time" />
                        <ComboBoxItem Content="Image Slider" />
                        <ComboBoxItem Content="Fresh Start" />
                    </ComboBox>

                    <Label >Step Name</Label>
                    <TextBox x:Name="txtStepName" TextChanged="txtStepName_TextChanged"/>

                </StackPanel>
                <Grid x:Name="grdDuration" Visibility="Collapsed" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="Duration" Grid.Row="0"/>
                    <local:TimeSpanControl x:Name="tscDuration" Grid.Row="1" HorizontalAlignment="Left" TextChanged="tscDuration_TextChanged"/>
                </Grid>
                <Grid x:Name="grdImageListes" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>
                    <Label Content="Image List Selection" Grid.Row="0" Grid.ColumnSpan="2"/>
                    <ComboBox x:Name="cboImageList" Grid.Row="1" SelectionChanged="cboImageList_SelectionChanged"/>
                </Grid>



            </StackPanel>
        </Grid>

        <Grid Grid.Row="3" >
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Command="{x:Static local:StepEditorPage.ArrowDown}" Style="{StaticResource Buttons.OnlyIcon}">
                    <Path Data="{StaticResource ArrowDown}" 
                          Width="8"
                          Fill="#333" 
                          Stretch="Uniform" />
                </Button>
                <Button  Command="{x:Static local:StepEditorPage.ArrowUp}" Style="{StaticResource Buttons.OnlyIcon}">
                    <Path Data="{StaticResource ArrowUp}" 
                          Width="8"
                          Fill="#333" 
                          Stretch="Uniform" />
                </Button>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <Button  Command="{x:Static ApplicationCommands.New}" Style="{StaticResource Buttons.OnlyIcon}">
                    <Path Data="{StaticResource Add}" 
                          Width="17"
                          Fill="#FF34B02E" 
                          Stretch="Uniform" />
                </Button>
                <Button Command="{x:Static ApplicationCommands.Delete}" Style="{StaticResource Buttons.OnlyIcon}">
                    <Path Data="{StaticResource Delete}" 
                          Width="13"
                          Fill="#555" 
                          Stretch="Uniform" />
                </Button>
            </StackPanel>


        </Grid>

    </Grid>
</Page>
