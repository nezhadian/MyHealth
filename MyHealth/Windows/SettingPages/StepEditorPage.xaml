<Page
    x:Class="MyHealth.StepEditorPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyHealth"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Steps Editor"
    d:Height="400"
    d:Width="600"
    Loaded="main_Loaded"
    mc:Ignorable="d">

    <Page.CommandBindings>
        <CommandBinding
            CanExecute="ArrowUp_CanExecute"
            Command="{x:Static local:StepEditorPage.ArrowUp}"
            Executed="ArrowCommands_Execute" />
        <CommandBinding
            CanExecute="ArrowDown_CanExecute"
            Command="{x:Static local:StepEditorPage.ArrowDown}"
            Executed="ArrowCommands_Execute" />

        <CommandBinding
            CanExecute="New_CanExecute"
            Command="{x:Static ApplicationCommands.New}"
            Executed="New_Executed" />
        <CommandBinding
            CanExecute="Delete_CanExecute"
            Command="{x:Static ApplicationCommands.Delete}"
            Executed="Delete_Executed" />
    </Page.CommandBindings>

    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="10" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" MinWidth="250" />
            <ColumnDefinition Width="20" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>

        <ComboBox x:Name="cboTemplates" SelectionChanged="cboTemplates_SelectionChanged">
            <ComboBoxItem Content="Pomodoro" Tag="pomodoro" />
            <ComboBoxItem Content="52/17 Standard" Tag="standard" />
            <ComboBoxItem
                Content="Custom"
                IsSelected="True"
                Tag="" />
        </ComboBox>
        <ListBox
            x:Name="lstItems"
            Grid.Row="2"
            SelectionChanged="lstItems_SelectionChanged">
            <local:StepData
                StepName="52min Work"
                StepType="WorkTime"
                Duration="00:52:00" />
            <local:StepData
                ImageList="Body"
                StepName="Resting"
                StepType="ImageSlider"
                Duration="00:17:00" />
            <local:StepData StepName="Ready" StepType="FreshStart" />
            <local:StepData StepName="Ready" StepType="Seperator" />
        </ListBox>

        <Grid
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="2">
            <StackPanel x:Name="stckMain" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Style="{StaticResource Texts.NormalText}">Step Type</TextBlock>
                    <ComboBox x:Name="cboStepType" SelectionChanged="cboStepType_SelectionChanged">
                        <ComboBoxItem Content="Work Time" />
                        <ComboBoxItem Content="Image Slider" />
                        <ComboBoxItem Content="Fresh Start" />
                    </ComboBox>

                    <TextBlock Style="{StaticResource Texts.NormalText}">Step Name</TextBlock>
                    <TextBox x:Name="txtStepName" TextChanged="txtStepName_TextChanged" />

                </StackPanel>
                <Grid x:Name="grdDuration" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Style="{StaticResource Texts.NormalText}"
                        Text="Duration" />
                    <local:TimeSpanControl
                        x:Name="tscDuration"
                        Grid.Row="1"
                        HorizontalAlignment="Left"
                        TextChanged="tscDuration_TextChanged" />
                </Grid>
                <Grid x:Name="grdImageListes" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <TextBlock
                        Grid.Row="0"
                        Grid.ColumnSpan="2"
                        Style="{StaticResource Texts.NormalText}"
                        Text="Image List Selection" />
                    <ComboBox
                        x:Name="cboImageList"
                        Grid.Row="1"
                        SelectionChanged="cboImageList_SelectionChanged" />
                </Grid>



            </StackPanel>
        </Grid>

        <Grid Grid.Row="3">
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button Command="{x:Static local:StepEditorPage.ArrowDown}" Style="{StaticResource Buttons.OnlyIcon}">
                    <Path
                        Width="8"
                        Data="{StaticResource ArrowDown}"
                        Fill="{DynamicResource Buttons.OnlyIcon.IconColor}"
                        Stretch="Uniform" />
                </Button>
                <Button Command="{x:Static local:StepEditorPage.ArrowUp}" Style="{StaticResource Buttons.OnlyIcon}">
                    <Path
                        Width="8"
                        Data="{StaticResource ArrowUp}"
                        Fill="{DynamicResource Buttons.OnlyIcon.IconColor}"
                        Stretch="Uniform" />
                </Button>
            </StackPanel>

            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <Button Command="{x:Static ApplicationCommands.New}" Style="{StaticResource Buttons.OnlyIcon}">
                    <Path
                        Width="17"
                        Data="{StaticResource Add}"
                        Fill="{DynamicResource IconsColor.Add}"
                        Stretch="Uniform" />
                </Button>
                <Button Command="{x:Static ApplicationCommands.Delete}" Style="{StaticResource Buttons.OnlyIcon}">
                    <Path
                        Width="13"
                        Data="{StaticResource Delete}"
                        Fill="{DynamicResource IconsColor.Delete}"
                        Stretch="Uniform" />
                </Button>
            </StackPanel>


        </Grid>

    </Grid>
</Page>
