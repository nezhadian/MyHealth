<Window x:Class="MyHealth.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyHealth"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="600" Width="800">
    <Window.CommandBindings>
        <CommandBinding Command="{x:Static ApplicationCommands.Save}" CanExecute="Save_CanExecute" Executed="Save_Executed"/>
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="lstMenu" Grid.RowSpan="2" BorderThickness="0,0,1,0" SelectedIndex="0"/>
        <Frame Grid.Column="1"  Content="{Binding ElementName=lstMenu,Path=SelectedItem.ItemPage}" NavigationUIVisibility="Hidden"/>
        
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20">
            <Button Content="Save" Style="{StaticResource Buttons.CTA}" Command="{x:Static ApplicationCommands.Save}"/>
            <Button Content="Cancel" Style="{StaticResource Buttons.CTA}" IsCancel="True" Background="#999" Padding="20,7" Margin="10,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
