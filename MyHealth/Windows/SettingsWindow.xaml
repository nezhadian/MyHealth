<Window
    x:Class="MyHealth.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyHealth"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="SettingsWindow"
    Width="800"
    Height="600"
    Background="{DynamicResource BackgroundColor}"
    Topmost="True"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.CommandBindings>
        <CommandBinding
            CanExecute="Save_CanExecute"
            Command="{x:Static ApplicationCommands.Save}"
            Executed="Save_Executed" />
    </Window.CommandBindings>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox
            x:Name="lstMenu"
            Grid.RowSpan="2"
            Background="{DynamicResource BackgroundColor}"
            BorderThickness="0,0,1,0"
            ItemContainerStyle="{StaticResource SettingWindow.ListMenuItem}"
            ItemsSource="{Binding MenuItems}"
            SelectedIndex="0">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding ItemPage.Title}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>

        <Frame
            Grid.Column="1"
            Content="{Binding ElementName=lstMenu, Path=SelectedItem.ItemPage}"
            NavigationUIVisibility="Hidden" />

        <StackPanel
            Grid.Row="1"
            Grid.ColumnSpan="2"
            Margin="20"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Command="{x:Static ApplicationCommands.Save}"
                Content="Save"
                Style="{StaticResource Buttons.CTA}" />
            <Button
                Margin="10,0,0,0"
                Content="Cancel"
                IsCancel="True"
                Style="{StaticResource Buttons.Secondary}" />
        </StackPanel>
    </Grid>
</Window>
