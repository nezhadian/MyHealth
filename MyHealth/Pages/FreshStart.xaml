<Page x:Class="MyHealth.FreshStart"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MyHealth"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Loaded="Page_Loaded"
      Unloaded="Page_Unloaded"
      Title="FreshStart">
    <Grid Background="Green">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

            <TextBlock x:Name="txtMessage" Style="{StaticResource Pages.MessageText.Dark}"/>
            
            <Button 
                Content="Stop Sound" 
                Style="{StaticResource FreshStart.StopSound}" 
                Click="StopSoundButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
