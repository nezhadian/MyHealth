<Page
    x:Class="MyHealth.FreshStart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyHealth"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FreshStart"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="Green"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">
    <Grid>
        <Grid MaxWidth="400" VerticalAlignment="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="30" />
                <RowDefinition Height="auto" />
            </Grid.RowDefinitions>

            <TextBlock x:Name="txtMessage" Style="{StaticResource Texts.PageTitle.Negative}" />
            <Button
                x:Name="btnMute"
                Grid.Row="2"
                Click="MuteButton_Click"
                Content="{StaticResource MuteIcon}"
                Style="{StaticResource Buttons.GlassButton}" />
        </Grid>
    </Grid>
</Page>
