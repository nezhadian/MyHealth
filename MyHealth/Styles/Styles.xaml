                <Path Grid.Column="1" Margin="3" x:Name="icon" Fill="#333" Stretch="Uniform"/>
                

                <TextBlock Text="{TemplateBinding StepName}" Grid.Column="2" VerticalAlignment="Center" />
                
                <TextBlock Text="{TemplateBinding Duration}" Grid.Column="3" VerticalAlignment="Center"/>
                
            </Grid>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsMouseOver" Value="true">
                <Setter Property="Background" Value="#330099ff" />
            </Trigger>
