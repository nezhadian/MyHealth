<Window x:Class="MyHealth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyHealth"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        MouseDown="Window_MouseDown"
        x:Name="mainWin"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame x:Name="frmMain" NavigationUIVisibility="Hidden"/>
        <Border HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="#55ffffff">
            <TextBlock x:Name="txtTimer" Text="00:00" FontSize="16"/>
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Go To Step">
                        <MenuItem Header="Fresh Start : 0"/>
                        <MenuItem Header="Work Time : 52"/>
                        <MenuItem Header="Break Time : 17"/>
                    </MenuItem>
                    <Separator/>
                    <MenuItem x:Name="mnuLockOnScreen" StaysOpenOnClick="True" Header="Luck On Screen" IsCheckable="True" Click="LockOnScreenBtn_Click"/>
                    <Separator/>
                    <MenuItem x:Name="mnuStop" Click="mnuStop_Click" Header="Stop Timer"/>
                    <MenuItem x:Name="mnuContinue" Click="mnuContinue_Click" Header="Continue Timer"/>
                    <MenuItem Click="ZeroTimerBtn_Click" Header="Zero Timer"/>
                    <Separator/>
                    <MenuItem Header="Exit" Click="ExitBtn_Click"/>
                </ContextMenu>
            </Border.ContextMenu>
        </Border>
        
    </Grid>
</Window>
