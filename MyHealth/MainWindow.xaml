<Window x:Class="MyHealth.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyHealth"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="NoResize"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False"
        Loaded="Window_Loaded"
        MouseDown="Window_MouseDown"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Frame x:Name="frmExrecise" NavigationUIVisibility="Hidden"/>
        <Border x:Name="brdTimer" ContextMenuOpening="brdTimer_ContextMenuOpening" HorizontalAlignment="Center" VerticalAlignment="Bottom" Background="#55ffffff" >
            <TextBlock x:Name="txtTimer" Text="00:00" FontSize="16"/>
        </Border>
        
    </Grid>
</Window>
