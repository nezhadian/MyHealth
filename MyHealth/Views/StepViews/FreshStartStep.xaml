<Page
    x:Class="MyHealth.FreshStartStep"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyHealth"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="FreshStart"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{Binding FreshStartBgColor, Mode=TwoWay, Converter={StaticResource Color2SolidColorBrushConverter}}"
    Loaded="Page_Loaded"
    Unloaded="Page_Unloaded"
    mc:Ignorable="d">
    <Grid>
        <Button
            x:Name="btnMute"
            Grid.Row="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="MuteButton_Click"
            Style="{StaticResource Buttons.GlassButton}">
            <Path
                Width="25"
                Data="{StaticResource Icons.Mute}"
                Fill="{DynamicResource BackgroundColor}"
                Stretch="Uniform" />
        </Button>
    </Grid>
</Page>
