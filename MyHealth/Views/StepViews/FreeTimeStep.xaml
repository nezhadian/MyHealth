<Page
    x:Class="MyHealth.FreeTimeStep"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyHealth"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ShortBreak"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Background="{Binding ShortBreakBgColor, Source={x:Static local:AppSettings.Data}, Mode=TwoWay, Converter={StaticResource Color2SolidColorBrushConverter}}"
    mc:Ignorable="d">

    <Grid>
        <TextBlock
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Style="{StaticResource Texts.PageTitle.Negative}"
            Text="{Binding StepName}" />
    </Grid>
</Page>
