<Control
    x:Class="MyHealth.TimerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyHealth"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Control.Template>
        <ControlTemplate TargetType="{x:Type local:TimerControl}">
            <TextBlock
                FontWeight="DemiBold"
                Style="{StaticResource Texts.CaptionText}"
                Text="{TemplateBinding Remained,
                                       Converter={StaticResource TimeSpanConverter}}" />
        </ControlTemplate>
    </Control.Template>

</Control>
